@model IEnumerable<AutoPartsWarehouse.Models.Supply>

@{
    ViewData["Title"] = "Поставки";
}

<h1>Журнал поставок</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Оформить поставку</a>
</p>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Дата</th>
                    <th>Поставщик</th>
                    <th>Статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>@item.Supplier?.Name</td>
                        <td>
                            @if(item.Status == "Получена") {
                                <span class="badge bg-success">@item.Status</span>
                            } 
                            else if(item.Status == "Ожидается") {
                                <span class="badge bg-warning text-dark">@item.Status</span>
                            }
                            else {
                                <span class="badge bg-secondary">@item.Status</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Изменить статус</a>
                            
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                        onclick="return confirm('Удалить эту запись о поставке?');">
                                    X
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>